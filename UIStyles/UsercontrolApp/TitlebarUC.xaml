<UserControl x:Class="UIStyles.UsercontrolApp.TitlebarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIStyles.UsercontrolApp"
             mc:Ignorable="d" 
            >

    <Border 
        Background="{StaticResource FrameBrush}" 
        BorderThickness="0 0 0 1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="🖥️" 
                       FontSize="16" 
                       Margin="5 5 5 0" 
                       VerticalAlignment="Top"/>

            <Menu Grid.Column="1" 
                  Background="Transparent" 
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left">
                <MenuItem Header="File">
                    <MenuItem Header="New" />
                    <MenuItem Header="Open" />
                    <MenuItem Header="Save" />
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Undo" />
                    <MenuItem Header="Redo" />
                </MenuItem>
                <MenuItem Header="File">
                    <MenuItem Header="New" />
                    <MenuItem Header="Open" />
                    <MenuItem Header="Save" />
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Undo" />
                    <MenuItem Header="Redo" />
                </MenuItem>
                <MenuItem Header="File">
                    <MenuItem Header="New" />
                    <MenuItem Header="Open" />
                    <MenuItem Header="Save" />
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Undo" />
                    <MenuItem Header="Redo" />
                </MenuItem>

            </Menu>

            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right">
                <Button x:Name="MinimizeButton" 
                        Content="&#xE921;"
                        Style="{StaticResource BtnTitlebarSt}"
                        Click="MinimizeButton_Click">
                </Button>
                <Button x:Name="MaximizeRestoreButton" 
                        Content="&#xE922;" 
                        Style="{StaticResource BtnTitlebarSt}"
                        Click="MaximizeRestoreButton_Click">
                </Button>
                <Button x:Name="CloseButton" 
                        Content="&#xE8BB;" 
                        Style="{StaticResource BtnTitlebarCloseSt}" 
                        Click="CloseButton_Click">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
