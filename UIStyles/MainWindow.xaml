<Window x:Class="UIStyles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIStyles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Expander Width="100" Header="D" Style="{StaticResource ExpanderSt}" >
        </Expander>
        <DataGrid x:Name="customDataGrid"  AutoGenerateColumns="True"
          IsReadOnly="True"
          RowHeight="40"
          AlternationCount="2"
          BorderBrush="Gray"
          BorderThickness="1"
          Background="White"
          Foreground="Black"
          HorizontalGridLinesBrush="LightGray"
          VerticalGridLinesBrush="LightGray">
            
        </DataGrid>
        <Button Style="{StaticResource BtnPrimarySt}" Content="Dinh"/>
    </StackPanel>
</Window>
